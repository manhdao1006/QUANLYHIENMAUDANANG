@model QUANLYHIENMAUDANANG.Models.TAIKHOAN

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title_management">XÓA THÔNG TIN TÀI KHOẢN</div>
<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã tài khoản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaTK)
        </dd>

        <dt>
            Tên đăng nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenDangNhap)
        </dd>

        <dt>
            Mật khẩu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MatKhau)
        </dd>

        <dt>
            Bệnh viện
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KHOAHUYETHOC_TRUYENMAU.BENHVIEN.TenBV)
            @Html.DisplayFor(model => model.KHOAXETNGHIEM.BENHVIEN.TenBV)
        </dd>

        <dt>
            Quyền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QUYENTAIKHOAN.TenQuyen)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn_primary" />
            @Html.ActionLink(" | Quay lại danh sách", "Index", null, new { @class = "link_comeback" })
        </div>
    }
</div>
