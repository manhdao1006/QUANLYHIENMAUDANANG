    <dl class="dl-horizontal">
        <dt>
            Người hiến
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PHIEUDANGKYHIENMAU.TenNguoiHien)
        </dd>

        <dt>
            Thời gian bắt đầu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ThoiGianBatDau)
        </dd>

        <dt>
            Thời gian kết thúc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ThoiGianKetThuc)
        </dd>

        <dt>
            Thể tích máu (ml)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TheTichMau)
        </dd>

        <dt>
            Tình trạng sức khỏe
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TinhTrangSucKhoe)
        </dd>

        <dt>
            Kết quả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KetQua)
        </dd>

        <dt>
            Chú thích
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChuThich)
        </dd>

        <dt>
            Nhóm máu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHOMMAU.MaNM)
        </dd>

        <dt>
            Nhân viên lấy máu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHANVIENKHOAXETNGHIEM.TenNV)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn_primary" />
            @Html.ActionLink(" | Quay lại danh sách", "Index", null, new { @class = "link_comeback" })
        </div>
    }
</div>
