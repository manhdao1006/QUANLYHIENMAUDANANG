@model QUANLYHIENMAUDANANG.Models.CHITIETHIENMAU

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title_management">XÓA THÔNG TIN CHI TIẾT HIẾN MÁU</div>
<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
