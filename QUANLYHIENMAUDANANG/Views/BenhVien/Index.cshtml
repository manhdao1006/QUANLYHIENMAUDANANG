@model IEnumerable<QUANLYHIENMAUDANANG.Models.BENHVIEN>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title_management">DANH SÁCH BỆNH VIỆN</div>

<form method="get" action="@Url.Action("Index")">
    <input class="txt_search" name="keyword" placeholder="Nhập từ khóa tìm kiếm ..." value="@ViewBag.CurrentFilter" />
    <input class="btn_primary" type="submit" value="Tìm kiếm" />
</form>

<div class="link_add">
    <a href="~/BenhVien/Create">Thêm mới bệnh viện</a>
</div>

<table class="table" style="border: solid 2px black;">
    <tr>
        <th>
            Tên bệnh viên
        </th>
        <th>
            Người đại diện
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenBV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiDaiDien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaBV }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaBV }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaBV })
            </td>
        </tr>
    }
</table>
