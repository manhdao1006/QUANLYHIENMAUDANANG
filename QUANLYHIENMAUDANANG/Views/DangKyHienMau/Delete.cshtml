@model QUANLYHIENMAUDANANG.Models.PHIEUDANGKYHIENMAU

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title_management">XÓA THÔNG TIN PHIẾU ĐĂNG KÝ</div>
<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã đăng ký
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaDKHM)
        </dd>

        <dt>
            Họ và tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNguoiHien)
        </dd>

        <dt>
            Ngày sinh
        </dt>

        <dd>
            @(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "N/A")
        </dd>

        <dt>
            Giới tính
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Số CCCD
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoCCCD)
        </dd>

        <dt>
            Ngày đăng ký
        </dt>

        <dd>
            @(Model.NgayDKHM.HasValue ? Model.NgayDKHM.Value.ToString("dd/MM/yyyy") : "N/A")
        </dd>

        <dt>
            Tên đợt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOTHIENMAU.TenDot)
        </dd>

        <dd style="display: none;">
            @Html.DisplayFor(model => model.DOTHIENMAU.MaDot)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn_primary" />
            @Html.ActionLink(" | Quay lại danh sách", "Index", null, new { @class = "link_comeback" })
        </div>
    }
</div>
