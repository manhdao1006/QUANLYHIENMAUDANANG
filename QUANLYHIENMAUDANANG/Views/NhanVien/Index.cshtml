@model IEnumerable<QUANLYHIENMAUDANANG.Models.NHANVIENKHOAXETNGHIEM>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title_management">DANH SÁCH NHÂN VIÊN</div>
<form method="get" action="@Url.Action("Index")">
    <input class="txt_search" name="keyword" placeholder="Nhập từ khóa tìm kiếm ..." value="@ViewBag.CurrentFilter" />
    <input class="btn_primary" type="submit" value="Tìm kiếm" />
</form>

<div class="link_add">
    <a href="~/NhanVien/Create">Thêm mới nhân viên</a>
</div>
<table class="table" style="border: solid 2px black;">
    <tr>
        <th>
            Họ và tên
        </th>
        <th>
            Chức vụ
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Bệnh viện
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KHOAXETNGHIEM.BENHVIEN.TenBV)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaNV }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNV }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV })
            </td>
        </tr>
    }

</table>
