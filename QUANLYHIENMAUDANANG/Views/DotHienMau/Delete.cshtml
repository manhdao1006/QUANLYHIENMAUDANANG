@model QUANLYHIENMAUDANANG.Models.DOTHIENMAU

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title_management">XÓA THÔNG TIN ĐỢT HIẾN MÁU</div>
<h3>Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã đợt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaDot)
        </dd>

        <dt>
            Tên đợt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenDot)
        </dd>

        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img width="400px" height="240px" src="~/Content/images/campaign/@Html.DisplayFor(model => model.HinhAnh)" />
        </dd>

        <dt>
            Số lượng đăng ký
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongDangKy)/@Html.DisplayFor(model => model.SoLuongDangKyToiDa)
        </dd>

        <dt>
            Ngày bắt đầu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayBatDau)
        </dd>

        <dt>
            Ngày kết thúc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayKetThuc)
        </dd>

        <dt>
            Đơn vị lấy máu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KHOAXETNGHIEM.BENHVIEN.TenBV)
        </dd>

        <dt>
            Đơn vị tổ chức
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DONVITOCHUC.TenDVTC)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn_primary" />
            @Html.ActionLink(" | Quay lại danh sách", "Index", null, new { @class = "link_comeback" })
        </div>
    }
</div>
