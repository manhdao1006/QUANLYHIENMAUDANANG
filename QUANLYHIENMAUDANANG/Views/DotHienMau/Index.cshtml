@model IEnumerable<QUANLYHIENMAUDANANG.Models.DOTHIENMAU>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title_management">DANH SÁCH ĐỢT HIẾN MÁU</div>
<form method="get" action="@Url.Action("Index")">
    <input class="txt_search" name="keyword" placeholder="Nhập từ khóa tìm kiếm ..." value="@ViewBag.CurrentFilter" />
    <input class="btn_primary" type="submit" value="Tìm kiếm" />
</form>

<div class="link_add">
    <a href="~/DotHienMau/Create">Thêm mới đợt hiến máu</a>
</div>
<table class="table" style="border: solid 2px black;">
    <tr>
        <th>
            Mã đợt
        </th>
        <th>
            Tên đợt
        </th>
        <th>
            Số lượng đăng ký
        </th>
        <th>
            Ngày bắt đầu
        </th>
        <th>
            Ngày kết thúc
        </th>
        <th>
            Đơn vị lấy máu
        </th>
        <th>
            Đơn vị tổ chức
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongDangKy)/@Html.DisplayFor(modelItem => item.SoLuongDangKyToiDa)
            </td>
            <td>
                @(item.NgayBatDau.HasValue ? item.NgayBatDau.Value.ToString("dd/MM/yyyy") : "N/A")
            </td>
            <td>
                @(item.NgayKetThuc.HasValue ? item.NgayKetThuc.Value.ToString("dd/MM/yyyy") : "N/A")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KHOAXETNGHIEM.BENHVIEN.TenBV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DONVITOCHUC.TenDVTC)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaDot }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDot }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaDot })
            </td>
        </tr>
    }

</table>
